{
    "manifest_version": 3,
    "name": "Notes with AI",
    "version": "1.0",
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    },
    "background": {
      "service_worker": "background.js",
      "type": "module"
    },
    "host_permissions": ["<all_urls>"],
    "permissions": [
      "storage",
      "activeTab",
      "scripting"
    ]
}
